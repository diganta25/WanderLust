<% layout("/layouts/boilerplate") %>

    <body>
        <div class="row">
            <div class="col-8 offset-3">
                <h2 class="mt-3 mb-3"><b>Listing details</b></h2>
            </div>
            <div class="card col-6 offset-3">
                <img src="<%= listing.image %>" class="card-img-top show-img" alt="listing-image">
                <div class="card-body">
                    <p class="card-text">
                        <b>
                            <%= listing.title %>
                        </b>
                        <br>
                        <%= listing.description %>
                            <br>
                            &#8377; <%= listing.price.toLocaleString("en-IN") %>
                                <br>
                                <%= listing.location %>
                                    <br>
                                    <%= listing.country %>
                    </p>
                </div>
            </div>
            <div class="show-btn mb-4 col-9 offset-3">
                <form method="GET" action="/listings/<%= listing._id %>/edit">
                    <button class="btn edit-btn">Edit</button>
                </form>
                <br>
                <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
                    <button class="btn btn-dark delete-btn" style="margin-left: 16px;">Delete</button>
                </form>
            </div>
        </div>
    </body>