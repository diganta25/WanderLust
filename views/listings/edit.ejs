<% layout("/layouts/boilerplate") %>
<body>
    <div class="row">
        <div class="col-7 offset-2">
            <br>
            <h2 class="mt-3 mb-3"><b>Edit Your Listing</b></h2>
            <form method="POST" action="/listings/<%= listing._id %>?_method=PUT">
                <div class="mb-3">
                    <label for="title" class="form-label">Title:</label>
                    <input id="title" name="listing[title]" type="text" class="form-control" value="<%= listing.title %>">
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Description: </label>
                    <textarea name="listing[description]" id="description" rows="4" cols="8"
                        class="form-control"><%= listing.description %></textarea>
                </div>

                <div class="mb-3">
                    <label for="image" class="form-label">Image link: </label>
                    <input id="image" name="listing[image]" type="text" class="form-control" value="<%= listing.image %>">
                </div>

                <div class="mb-3">
                    <label for="price" class="form-label">Price: </label>
                    <input id="price" name="listing[price]" type="number" class="form-control" value="<%= listing.price %>">
                </div>

            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="country" class="form-label">Country: </label>
                    <input id="country" name="listing[country]" type="text" class="form-control" value="<%= listing.country %>">
                </div>

                <div class="mb-3 col-md-8">
                    <label for="location" class="form-label">Location: </label>
                    <input id="location" name="listing[location]" type="text" class="form-control" value="<%= listing.location %>">
                </div>
            </div>
                <br>

                <Button class="btn btn-dark mb-5 create-btn">Save Changes</Button>
                
            </form>
        </div>
    </div>
</body>
